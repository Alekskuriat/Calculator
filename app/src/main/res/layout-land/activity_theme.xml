<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:id="@+id/textViewTheme"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="@string/themeApplication"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTheme1"
        style="@style/CalcButtonServiceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="@string/theme1"
        app:layout_constraintEnd_toStartOf="@id/btnTheme2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewTheme" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTheme2"
        style="@style/CalcButtonServiceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopBtnThemes"
        android:text="@string/theme2"
        app:layout_constraintEnd_toStartOf="@id/btnTheme3"
        app:layout_constraintStart_toEndOf="@id/btnTheme1"
        app:layout_constraintTop_toBottomOf="@id/textViewTheme" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTheme3"
        style="@style/CalcButtonServiceStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTopBtnThemes"
        android:text="@string/theme3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnTheme2"
        app:layout_constraintTop_toBottomOf="@id/textViewTheme" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_marginBottom="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>